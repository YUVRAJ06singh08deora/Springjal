<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".SearchUsingId">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/createaccounttxt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="150dp"
                android:text="Search using Springshed Id"
                android:textColor="#213C89"
                android:textSize="32dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/state"
                android:layout_width="343dp"
                android:layout_height="86dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="23dp"
                android:layout_below="@+id/addsprtxt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Enter Springshed Id or Iot Device Id:"
                    android:textColor="#5BADD3"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginLeft="5dp" />
                <EditText
                    android:id="@+id/springshedidedittext"
                    android:layout_width="343dp"
                    android:layout_height="53.15dp"
                    android:layout_marginTop="32.85dp"
                    android:hint="SPR3214"
                    android:textColor="@color/black"
                    android:textColorHint="#5F5F5F"
                    android:background="@drawable/rounded_edittext_background"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ortxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="23dp"
                android:layout_below="@+id/programname">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="------Or------"
                    android:textColor="#5BADD3"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginLeft="100dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/findonmaptxt"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ortxt"
                android:background="@drawable/button2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="16dp"
                    android:text="Find on Map"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fetchdata"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/iotmappingtxt"
                android:background="@drawable/button2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="16dp"
                    android:text="Fetch all Data"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fetchIotdata"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/iotmappingtxt"
                android:background="@drawable/button2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Fetch Iot Sensor Data"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/analyseadmin"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/fetchbtn"
                android:background="@drawable/button2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:text="Admin Analyse Data"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>