<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".Admin_Home">

    <ImageView
        android:id="@+id/logoutbtn"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/brain_bank_logo" />

    <ImageView
        android:id="@+id/userphoto"
        android:layout_width="146dp"
        android:layout_height="113dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/patient1" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userphoto"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="5dp"
        android:text="Walter White"
        android:textColor="#213C89"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginLeft="140dp"
        android:text="Emp Id: 20MIS0196"
        android:textColor="#5BADD3"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid"
        android:layout_marginLeft="160dp"
        android:text="Role: Admin"
        android:textColor="#5BADD3"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/recievedActivity"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_below="@+id/role"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text=" Recieved Activity"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/analysespringshed"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_below="@+id/recievedActivity"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text=" Analyse Springshed"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/analytics"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_below="@+id/analysespringshed"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:text="Analytics"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spring_plot_all"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_below="@+id/analytics"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button2"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:text="Spring Shed Data"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spring_data_filter"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_below="@+id/spring_plot_all"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Search Using Filter"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sendmessage"
        android:layout_width="254dp"
        android:layout_height="58dp"
        android:layout_below="@+id/spring_data_filter"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/button2"
        android:layout_marginRight="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Send Alert Message"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>