<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck"
    tools:context=".AnalyseSpringBoundaries">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="110dp">

            <TextView
                android:id="@+id/sprdtatatxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="23dp"
                android:text="Spring Shed Data"
                android:textColor="#213C89"
                android:textSize="32dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/pic1layout"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_below="@+id/addsprtxt"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/picpreprocesstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="223dp"
                    android:layout_marginTop="23dp"
                    android:text="Picture in Year -: 2020"
                    android:textColor="#DB4464"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pic1txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:text="Picture in Year -: 2020"
                    android:textColor="#DB4464"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pic1txt"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/imageanalyse" />

                <ImageView
                    android:id="@+id/preprocessedimage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pic1txt"
                    android:layout_marginLeft="200dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/imageanalyse" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pic2layout"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_below="@+id/pic1layout"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/pic2txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="23dp"
                    android:text="Picture in Year -: 2025"
                    android:textColor="#DB4464"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pic2preprocesstxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="223dp"
                    android:layout_marginTop="23dp"
                    android:text="Picture in Year -: 2025"
                    android:textColor="#DB4464"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pic2txt"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/imageanalyse" />

                <ImageView
                    android:id="@+id/image2preprocessed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pic2txt"
                    android:layout_marginLeft="200dp"
                    android:layout_marginBottom="19dp"
                    android:src="@drawable/imageanalyse" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/changeInaretxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic2layout"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="-1dp"
                    android:text="Change in Area"
                    android:textColor="#DB4464"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chgedArea"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="150dp"
                    android:text="0 Msq"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/analysebtn"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_below="@+id/iotmappingtxt"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="16dp"
                    android:text="Analyse"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>