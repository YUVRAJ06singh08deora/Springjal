<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="608dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".Fetch_Current_location" />

    <RelativeLayout
        android:id="@+id/fetchCoordinatesbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button2"
        android:backgroundTint="#5BADD3"
        android:text="Fetch Coordinates"
        map:layout_constraintBottom_toBottomOf="parent"

        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.498"
        map:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch Coordinates"
            android:textSize="19dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="23dp"
            android:textColor="#fff"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
